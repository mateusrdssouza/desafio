generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt    @id @default(autoincrement())
  uuid      String    @unique @default(uuid())
  name      String
  email     String    @unique
  balance   BigInt    @default(0)
  password  String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  wallets   Wallet[]

  @@map("users")
}

model Wallet {
  id          BigInt       @id @default(autoincrement())
  uuid        String       @unique @default(uuid())
  userId      BigInt       @map("user_id")
  name        String
  balance     BigInt       @default(0)
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  deletedAt   DateTime?    @map("deleted_at")
  user        User         @relation(fields: [userId], references: [id])
  investments Investment[]

  @@map("wallets")
}

model Company {
  id                   BigInt          @id @default(autoincrement())
  uuid                 String          @unique @default(uuid())
  name                 String
  description          String
  sector               String
  ticker               String          @unique
  stockExchange        String          @map("stock_exchange")
  stockPrice           BigInt          @map("stock_price")
  marketCapitalization BigInt          @map("market_capitalization")
  marketRiskLevel      MarketRiskLevel @map("market_risk_level")
  logoUrl              String          @map("logo_url")
  createdAt            DateTime        @default(now()) @map("created_at")
  updatedAt            DateTime        @updatedAt @map("updated_at")
  deletedAt            DateTime?       @map("deleted_at")
  investments          Investment[]

  @@map("companies")
}

model Investment {
  id        BigInt    @id @default(autoincrement())
  uuid      String    @unique @default(uuid())
  walletId  BigInt    @map("wallet_id")
  companyId BigInt    @map("company_id")
  shares    BigInt
  amount    BigInt
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  wallet    Wallet    @relation(fields: [walletId], references: [id])
  company   Company   @relation(fields: [companyId], references: [id])

  @@map("investments")
}

enum MarketRiskLevel {
  LOW
  MEDIUM
  HIGH
}
